<h1>My Tasks</h1>


<%= link_to "Create a new task", new_task_path  %>
<% @tasks.each do |task| %>
<div class="d-flex justify-content-between">
<% task.completed? ? @status = "checked" : @status = "value" %>
  <p><input type="checkbox" <%= @status %> name="taskstatus" data-id="<%=task.id%>"><%= link_to task.title, task_path(task) %></p><p> <%= link_to ' x',
    delete_task_path(task),
    data: { confirm: 'Are you sure?' },
    method: :delete, :class => "btn btn-danger m-1" %></p>
</div>
<% end %>
